<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PetGuide" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="editTextLayoutStyle">
        <item name="boxBackgroundMode">none</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/round_white_stroke</item>
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/round_background_filled</item>
        <item name="android:backgroundTint">@color/selected_color</item>
        <item name="android:textSize">@dimen/text_sub_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="page_title">
        <item name="android:textSize">@dimen/text_main_title_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>