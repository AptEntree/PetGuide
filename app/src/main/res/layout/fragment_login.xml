<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.LoginFragment"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="20dp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/app_logo"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_weight="1"/>
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_email_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/editTextLayoutStyle"
        android:layout_weight="1">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_email_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_password_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/editTextLayoutStyle"
        android:layout_weight="1">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <Button
        android:id="@+id/login_enter_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Entrar"
        android:gravity="center"
        android:backgroundTint="#BB532B"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/register_text_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="novo aqui?"
        android:gravity="center"
        android:layout_weight="1"/>


</LinearLayout>