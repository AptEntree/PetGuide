<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/day_item"
        layout="@layout/day_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reminder_clinic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="aaaaaaa"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/reminder_clinic"
        app:layout_constraintEnd_toStartOf="@id/color_indicator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/day_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_clinic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BBBBBBBBBBB"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_indicator"
        app:layout_constraintStart_toEndOf="@id/day_item"
        app:layout_constraintTop_toBottomOf="@id/reminder_title" />

    <View
        android:id="@+id/color_indicator"
        android:layout_width="20dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/color_indicator_drawable"
        app:layout_constraintStart_toEndOf="@id/reminder_clinic"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>