<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/round_background_filled"
    android:backgroundTint="@color/main_color"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <include
        android:id="@+id/day_item"
        layout="@layout/day_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reminder_clinic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="aaaaaaa"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/reminder_clinic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/day_item"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/reminder_clinic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BBBBBBBBBBB"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/day_item"
        app:layout_constraintTop_toBottomOf="@id/reminder_title"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>