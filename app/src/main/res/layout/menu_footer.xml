<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_top_background"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/menu_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_house"
        app:layout_constraintStart_toEndOf="@id/menu_events"
        app:layout_constraintEnd_toStartOf="@id/menu_pets"
        android:layout_marginHorizontal="30dp"/>

    <ImageView
        android:id="@+id/menu_events"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_pet_recovery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_home"
        android:layout_marginHorizontal="30dp"/>

    <ImageView
        android:id="@+id/menu_pets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dog_collar"
        app:layout_constraintStart_toEndOf="@id/menu_home"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>